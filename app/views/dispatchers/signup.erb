<h1>This is a signup page</h1>
<form action="/dispatchers" method="post">
    <label for="name">Name: </label>
    <br>
    <input type="text" id="name" name="dispatcher[name]" autofocus>
    <br><br>
    <label for="email" >Email:</label>
    <br>
    <input type="text" id="email" name=dispatcher[email] placeholder="example@tds.com">
    <br><br>
    <label for="team">Please select your team:</label>
    <br>
    <% Team.all.each do |t| %>
            <input type="radio" name="dispatcher[team_id]" value="<%=t.id%>" id="<%=t.id%>">
            <label for="<%=t.id%>"><%= t.name %></label><br>
        <% end %>
    <br><br>
    <label for="username">Username: </label>
    <br>
    <input type="text" id="username" name="dispatcher[username]">
    <br><br>
    <label for="password">Password: </label>
    <br>
    <input type="password" id="password" name="dispatcher[password]" placeholder="************">
    <br><br>
    <input type="submit" value="Create new dispatcher">


</form>