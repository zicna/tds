<h1>All dispatchers: </h1>

<div id="table-cnt">
    <table>
        <caption>Dispatcher board:</caption>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Team</th>
        <%@dispatchers.each do |dispatcher|%>
            <tr>
                <td><%= dispatcher.id %></td>
                <td><a href="/dispatchers/<%=dispatcher.id%>"><%= dispatcher.name %></a></td>
                <td><a href="mailto:<%= dispatcher.email %>"><%= dispatcher.email %></td>
                
                <% if Team.find_by(id: dispatcher.team_id) %>
                    <td><a href="/teams/<%=dispatcher.team_id%>"><%= Team.find_by(id: dispatcher.team_id).name %></a></td>
                <%else%>
                    <td>"no Team assigned"</td>
                <%end%>
                 
            </tr>
            <%end%>
    </table>
<div>
<br><br>
<div id="btn-new">
    <a class="button" href="/teams/new">Add new dispatcher</a>
</div>