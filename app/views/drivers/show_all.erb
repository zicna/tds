<h1>All drivers: </h1>

<div id="table-cnt">
    <table>
        <caption>Driver board:</caption>
        <th>Id</th>
        <th>Name</th>
        <th>Team</th>
        <%@drivers.each do |driver|%>
            <tr>
                <td><%= driver.id %></td>
                <td><a href="/drivers/<%=driver.id%>"><%= driver.name %></a></td>
                <%if Team.find_by(id: driver.team_id)%>
                    <td><%=Team.find_by(id: driver.team_id).name%></td>
                <%else%>
                    <td>"no team"</td>
                <%end%>
            </tr>
            <%end%>
    </table>
<div>
<br><br>
<div id="btn-new">
    <a class="button" href="/drivers/new">Add new driver</a>
</div>